version: '3.8'

services:
  nginx:
    image: nginx:latest
    pull_policy: always
    container_name: nginx
    ports:
      - "{{ registry.port }}:80"
    volumes:
      - {{ registry.path }}/conf/nginx.conf:/etc/nginx/nginx.conf:ro
      - {{ registry.path }}/repo:/usr/share/nginx/html:ro
    restart: unless-stopped
