auto {{ interfaces[0] }}
iface {{ interfaces[0] }} inet static
  address {{ ansible_ssh_host }}
  netmask {{ net.mask }}
  gateway {{ net.gateway }}
  dns-domain {{ domain }}
  dns-nameserver {{ net.bind }}
{% if freeipa.srv is defined %}
  dns-nameserver {{ hostvars[freeipa.srv].ansible_ssh_host }}
{% endif %}
  dns-search {{ domain }}


